<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.smartsprites.class">Assetic\Filter\SmartSpritesFilter</parameter>
        <parameter key="assetic.filter.smartsprites.java">/usr/bin/java</parameter>
        <parameter key="assetic.filter.smartsprites.classpath" type="collection" />
        <parameter key="assetic.filter.smartsprites.log_level">ERROR</parameter>
        <parameter key="assetic.filter.smartsprites.sprite_png_depth">AUTO</parameter>
        <parameter key="assetic.filter.smartsprites.sprite_png_ie6">false</parameter>
        <parameter key="assetic.filter.smartsprites.css_file_encoding">%kernel.charset%</parameter>
    </parameters>

    <services>
        <service id="assetic.filter.smartsprites" class="%assetic.filter.smartsprites.class%">
            <tag name="assetic.filter" alias="smartsprites" />
            <call method="setJava"><argument>%assetic.filter.smartsprites.java%</argument></call>
            <call method="setClasspath"><argument>%assetic.filter.smartsprites.classpath%</argument></call>
            <call method="setLogLevel"><argument>%assetic.filter.smartsprites.log_level%</argument></call>
            <call method="setSpritePngDepth"><argument>%assetic.filter.smartsprites.sprite_png_depth%</argument></call>
            <call method="setSpritePngIe6"><argument>%assetic.filter.smartsprites.sprite_png_ie6%</argument></call>
            <call method="setCssFileEncoding"><argument>%assetic.filter.smartsprites.css_file_encoding%</argument></call>
        </service>
    </services>
</container>
